extends ../aalayout/layout

block content
	div(style="height:50px")
	div(style="height:50px")
	.container
		h1.mt-3 订单列表
		#ordersElement

		//- .row.mt-5
			.col-6
				h3 
					span 总米数:&nbsp;
					span#extents
			.col-6
				h3
					span 总计:&nbsp;
					span#imp

	form#orderFilterForm
		.topNav-second.p-1
			.row
				.col-md-1.pt-2.text-right 发货状态:
				.col-md-2
					select#statusBtn.form-control(data-style="btn-info", name="status")
						option(value=0) 未发货
						option(value=1) 已发货
						option(value=-1) 全部
				.col-md-1.pt-2.text-right 类型选择:
				.col-md-1
					select#genreSel.form-control(data-style="btn-info", name="genre")
						option(value=0) 类型
						each genre in genres
							- a;
							if genre.genre == condGenre
								-a;
								option(value=genre.genre, selected="selected") #{genre.genre}
							else
								option(value=genre.genre) #{genre.genre}
				.col-md-1.pt-2.text-right 型号:
				.col-md-2
					#ajaxForm
						input#ajaxKey.productcode.form-control(type="text", autocomplete="off", name="keyword")
				//- .col-md-1
				.col-md-2.pt-2
					span#cterCode 全部客户
					span.ml-3.text-danger#cncCter(style="display:none") <span class="oi oi-x"></span>
					input#cterId.form-control(type="hidden", autocomplete="off", name="cter")
				//- .col-md-2
				.col-md-2.pt-2
					strong
						span.mr-2 总米数:
						span#extents
		.topNav-third.p-1
			.row
				.col-md-1.pt-2.text-right 收货时间:
				.col-md-2
					.input-group
						input#atFm.datepicker.form-control(type="text",readonly="readonly", name="atFm")
						.input-group-append
								button.cncAt.btn.btn-outline-dark(type="button") X
				.col-md-2
					.input-group
						input#atTo.datepicker.form-control(type="text", readonly="readonly", name="atTo")
						.input-group-append
								button.cncAt.btn.btn-outline-dark(type="button") X
				//- .col-md-2
				.col-md-1.pt-2.text-right 发货时间:
				.col-md-2
					.input-group
						input#edFm.datepicker.form-control(type="text",readonly="readonly", name="edFm")
						.input-group-append
								button.cncAt.btn.btn-outline-dark(type="button") X
				.col-md-2
					.input-group
						input#edTo.datepicker.form-control(type="text", readonly="readonly", name="edTo")
						.input-group-append
								button.cncAt.btn.btn-outline-dark(type="button") X
								.col-md-2
				.col-md-2.pt-2
					strong
						span.mr-2 总金额:
						span#imp
	<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
	//- <link rel="stylesheet" href="/resources/demos/style.css">
	<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
	<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
	//- timepicker
	link(rel="stylesheet", href="/libs/jt.timepicker/jquery.timepicker.css")
	script(src="/libs/jt.timepicker/jquery.timepicker.min.js")

	script(src="/js/bser/order/list/apiList.js")
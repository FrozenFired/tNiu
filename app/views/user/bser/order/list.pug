extends ../aalayout/layout

block content
	div(style="height:50px")
	div(style="height:50px")
	.container
		h1 order list
		each order in orders
			-a;
			a(href="/bsOrder/"+order._id)
				.order.bg-light.text-dark.mt-3.p-3
					.row
						.col-12.col-md-4
							h3 #{order.code}
						.col-12.col-md-4
							if order.tmplet
								-tmplet = order.tmplet;
								h3 #{tmplet.code} #{tmplet.nome}
						.col-12.col-md-4
							if order.cter
								-cter = order.cter;
								h3 #{cter.nome}
					.row
						each color in order.colors
							-a;
							.col-6.col-md-4
								span [#{color.code} #{color.color} #{color.extent}米]

	.topNav-second.p-1
		.row.text-right
			.col-2.col-md-1
				button.btn.btn-info.ordsts(type="button")
					span 未
					span.text-dark <span class="oi oi-loop"></span>
					span.text-dark 已
			.col-6.col-md-5.col-lg-3
				form.ajaxForm
					input.ajaxKey.productcode.form-control(type="text", autocomplete="off")
			.col-2.offset-md-4.offset-lg-6.col-md-1
				a.btn.btn-warning.btn-block(href="/bsOrderAdd") <span class="oi oi-plus"></span>
			.col-1.col-md-1
				button.btn.btn-info.shield(type="button") <span class="oi oi-shield"></span>
	.topNav-third.p-1
		.row
			.col-6.offset-md-4.col-md-4.offset-xl-6.col-xl-3
				.input-group
					input#atFm.datepicker.form-control(type="text",readonly="readonly", aria-label="Recipient's username", aria-describedby="basic-addon2")
					.input-group-append
							button.cncAt.btn.btn-outline-dark(type="button") X
			.col-6.col-md-4.col-xl-3
				.input-group
					input#atTo.datepicker.form-control(type="text", readonly="readonly")
					.input-group-append
							button.cncAt.btn.btn-outline-dark(type="button") X
	<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
	//- <link rel="stylesheet" href="/resources/demos/style.css">
	<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
	<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
	//- timepicker
	link(rel="stylesheet", href="/libs/jt.timepicker/jquery.timepicker.css")
	script(src="/libs/jt.timepicker/jquery.timepicker.min.js")

	script(src="/js/bser/order/list/list.js")
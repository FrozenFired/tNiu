extends ../aalayout/layout

block content
	.container.mt-3
		.row
			.col-6.col-lg-3.text-center.mt-3
				a(href="/bsTmplets")
					img(src="/imgs/index/deposits.png", width="50px", height="50px")
					//- span Upload Excel
				a.btn.btn-default.btn-lg.btn-block.text-dark(href="/bsTmplets") 模特库
			.col-6.col-lg-3.text-center.mt-3.p-3
				a(href="/bsTmpletAdd") <span class="oi oi-plus"></span>
					//- span Order List
				a.btn.btn-default.btn-lg.btn-block.text-dark(href="/bsTmpletAdd") #{Lang.storage}
		.row
			.col-6.col-lg-3.text-center.mt-3
				a(href="/bsOrders")
					img(src="/imgs/index/orders.png", width="50px", height="50px")
					//- span Order List
				a.btn.btn-default.btn-lg.btn-block.text-dark(href="/bsOrders") #{Lang.record}
			.col-6.col-lg-3.text-center.mt-3
				a(href="/bsOrders?status=1")
					img(src="/imgs/index/orders.png", width="50px", height="50px")
					//- span Order List
				a.btn.btn-default.btn-lg.btn-block.text-dark(href="/bsOrders?status=1") 已发订单
			.col-6.col-lg-3.text-center.mt-3
				a(href="/bsCters")
					div(style="height:10px")
					img(src="/imgs/index/customer.png", width="50px", height="40px")
				a.btn.btn-default.btn-lg.btn-block.text-dark(href="/bsCters") #{Lang.client}
			.col-6.col-lg-3.text-center.mt-3
				a(href="/bsOrderAdd")
					img(src="/imgs/index/order.png", width="50px", height="50px")
					//- span Manual
				a.btn.btn-default.btn-lg.btn-block.text-dark(href="/bsOrderAdd") #{Lang.sales}
		.row
			.col-6.col-lg-3.text-center.mt-3
				a(href="/bsFirm")
					img.rounded-circle(src="/imgs/index/office.jpg", width="50px", height="50px")
				a.btn.btn-default.btn-lg.btn-block.text-dark(href="/bsFirm") #{Lang.company}